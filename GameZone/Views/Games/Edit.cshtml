@model EditFormViewModel

@{
    ViewData["Title"] = "Edit Game";
}

<h5>
   @* <i class="bi bi-plus-circle-dotted"></i> *@
    Edit game
</h5>


<form asp-controller="Games" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="form-label mt-4"></label>
                <input class="form-control" asp-for="Name" type="text" placeholder="Enter Name">
                <span asp-validation-for="Name" class="text-bg-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="form-label mt-4"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-select"
                        data-placeholder="Select Category" data-minimum-results-for-search="Infinity">
                    <option>Select Category</option>
                </select>
            </div>
            <div>
                <label asp-for="SelectedDevices" class="form-label mt-4"></label>
                <select asp-for="SelectedDevices" asp-items="Model.Devices" class="form-select" data-placeholder="Select Category">
                    <option>Select Devices</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="form-label mt-4"></label>
                <textarea class="form-control" asp-for="Description" type="des" placeholder="Enter Description"></textarea>
                <span asp-validation-for="Description" class="text-bg-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cover" class="form-label mt-4"></label>
                <input type="file" class="form-control" asp-for="cover"
                       data-rule-extension="@FileSettings.ExtentionFile.Replace(".", string.Empty)"
                       data-msg-extension="Not allowed extension"
                       data-rule-filesize="@FileSettings.MaxSizeInByte"
                       data-msg-filesize="Maximum allowed size is @FileSettings.MaxSizeInMG MB">
                @* <small class="form-text text-muted">Only Jpg,png and max size 1MB.</small> *@

                <span asp-validation-for="cover" class="text-bg-danger"></span>

            </div>
            <button type="submit" class="btn btn-light text-black mt-4">Save</button>
        </div>

        <div class="col-md-6 d-flex justify-content-center pt-4 overflow-hidden">
            <img class="cover-preview" alt="cover" src="@($"/Assests/Images/Game/{Model.CurrentCover}")"
            @* src=$"/Assests/Images/Game/{@Model.CurrentCover} style="height:450px" *@
            />

        </div>
    </div>

</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/previewimage.js" asp-append-version="true"></script>
    <script src="~/js/filesize-valitator.js" asp-append-version="true"></script>
}